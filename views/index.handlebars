<h1>Discussion forums</h1>
{{#unless userLoggedIn}}
<p>
  <a href="/login">Sign in</a>
  |
  <a href="/register">Register</a>
</p>
{{else}}
<p>
  <a href="/logout">Logout</a>
</p>
{{/unless}}

{{!-- 
{{#each threadList as |text path|}}
  <li>
    {{#if userLoggedIn}}
      <a href={{path}}>
    {{/if}}
    {{text}}
    {{#if userLoggedIn}}
    </a>
    {{/else}}
  </li>
{{/each}}
{{#if userLoggedIn}}
<h2>Actions</h2>
<ul>
  {{#each actions}}
  <li><a href=this.link>this.name</a></li>
  {{/each}}
</ul>
{{/if}}
<h2>Recent discussions</h2>
{{#unless userLoggedIn}}
<p>Note: You can view the discussions only when logged in.</p>
{{/unless}}
--}}
<script src={{script}}></script>